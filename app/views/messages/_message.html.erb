
  <div class="chats">
    <div class="chat">
      <div class="chat-top">
        <div class="chat-top-name">
          <%= message.user.name %>
        </div>
        <div class="chat-top-date">
          <%= l message.created_at %>
        </div>
      </div>
      <div class="chat-content">
        <%= message.content%>
      </div>
      <%= image_tag message.image.variant(resize: '500x500'), class: 'message-image' if message.image.attached? %>
    </div>
  </div>  
