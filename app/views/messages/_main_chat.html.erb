<div class="main-chat">
    <div class="main-chat-header">
      <div class="header-title">
        <div class="main-chat-room-name">
          ROOM1
        </div>
        <div class="chat-end-btn">
          <a href="#">チャットを終了する</a>
        </div>
      </div>
    </div>
    <div class="main-chat-messages">
      <div class="chats">
        <div class="chat">
          <div class="chat-top">
            <div class="chat-top-name">
              Tom
            </div>
            <div class="chat-top-date">
              2022/9/8（Wed）12:34:45
            </div>
          </div>
          <div class="chat-bottom">
            <div class="chat-content">
              うぃ
            </div>
          </div>
        </div>
        <div class="chat">
          <div class="chat-top">
            <div class="chat-top-name">
              Tom
            </div>
            <div class="chat-top-date">
              2022/9/8（Wed）12:34:45
            </div>
          </div>
          <div class="chat-bottom">
            <div class="chat-content">
              うぃ
            </div>
          </div>
        </div>
      </div>
    </div>
    <%= form_with model: [@room, @message], class: 'form', local: true do |f| %>
      <div class="main-chat-input">
        <div class="main-chat-form">
          <div class="form-input">
            <%= f.text_field :content, class: 'form-message', placeholder: 'type a message' %>
            <label class="form-image">
              <span class="image-file">画像</span>
              <%= f.file_field :image, class: 'hidden' %>
            </label>
          </div>
          <%= f.submit '送信', class: 'form-submit' %>
        </div>
      </div>
    <% end %>
  </div>